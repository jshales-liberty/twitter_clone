  <!DOCTYPE html>
  <html>
  	<head>
	  	<title>{{username}} Feed Page</title>

	  	<style>
    header {
            background-color:#262626;
            width:100%;
            height:50px;
            box-shadow: 0px 1px 50px #5E5E5E;
            position:fixed;
            top:0px;
            color: white;
            z-index: 100;
          }

          aside {
	            float: left;
    	        padding-left: 2em;
        	    padding-right: 2em;
            	padding-bottom: 2em;
            	width: 175px;
          	}

	    	#logoff {
				position: absolute;
				right: 10px;
			}

			button {
  			display: inline-block;
  			font-size: 16px;
  			cursor: pointer;
  			text-align: center;
  			text-decoration: none;
  			outline: none;
  			background-color: #53575e;
  			color: #fff;
  			border: none;
  			border-radius: 10px;
  			box-shadow: 0 3px #999;
  			margin-left: 1em;
    		margin-right: 1em;
		}

div {
			margin-top: 1em;
		}
		button:hover {background-color: #3e8e41}

		button:active {
  			background-color: #3e8e41;
  			box-shadow: 0 5px #666;
  			transform: translateY(4px);
  		}

		table{
  			border-collapse: collapse;
  			width: 100%;
		}
		
		th, td {
 		   height: 40px;
 		   
		}
		
		tr:nth-child(even) {
			background-color: #d1d1e0;
		}


		    a:link {
		      	color: blue;
	 	   		text-decoration: none;
	 	   		font-size: 16px;
			}

			a:visited {
				color: blue;
	    		text-decoration: none;
	    		font-size: 16px;
			}

			a:hover {
				color: blue;
			}

			#activityList {
	            text-align: center;
	            padding: 1em;
	            overflow: hidden;
	            background-color: #f0f0f5;
	            box-shadow: 0px 1px 50px #5E5E5E;
	            height: 80vh;
	        }

	                  #follows {
            float: left;
            padding-left: 2em;
            
            padding-bottom: 2em;
            width: 14%;
          }

	        input {
	        	margin-left: 1em;
	        }
	    </style>
    </head>
    <body>
	  	<header>
      <main>
          <div>
            <input type="text" name ="search" id="search">
            <button id="searchbutton">Lookup User</button>
            <button id="tweetpage">Home</button>
            <button id="logoff"><a href = "/logoff">Logoff</a></button>
          </div>
      	</header>
      	<br>
      	<br>
      	<br>
	  	<aside id = "follows">
            <h3>{{username}} Follows</h3>
        	<div class = "following_tweets" id = "following_tweets">
        	{% for f in follows %}
        	<a href="/userActivity?UserName='{{f}}'">{{f}}<br>
        	</a>
        	{% endfor %}
        </aside>
        <section id = "activityList">
      		<h2>{{username}} Activities</h2>
      		<table class = "tweets" id = "tweets">
      		<tr><td><b>Tweet</b></td>
      		<td><b>Author</b></td>
      		<td><b>Post Date</b></td>
      		</tr>
      		{% for t in tweets %}
      		<tr>
      		<td>{{t.tweet}}</td>
      		<td>{{t.createdByName}}</td>
      		<td>{{t.createTimestamp}}</td>
      		</tr>
      		{% endfor %}
      		</table>
      	</section>
      	<script type="text/javascript">

      	var button = document.getElementById('searchbutton');
    	button.onclick = function () {
			var link = document.getElementById("search").value;
			window.location = "/userActivity?UserName=%27"+link+"%27";}

			    var homebutton = document.getElementById('tweetpage');
      homebutton.onclick = function () {
      window.location = "/createTweetHTML";}


    		</script>
    </body>
   </html>
