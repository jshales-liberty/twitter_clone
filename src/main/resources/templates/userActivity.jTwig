  <!DOCTYPE html>
  <html>
  	<head>
	  	<title>{{username}} Feed Page</title>

	  	<style>
	        header {
	            background-color:#87CEFA;
	            width:100%;
	            height:60px;
	            box-shadow: 0px 1px 50px #5E5E5E;
	            position:fixed;
	            top:0px;
	            color: white;
	            z-index: 100;

              background-image: url("https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcSKmdyi6krntZffimURj6CoJQyar7HD7Q0O-aHc43rLL8NaQMXP");
              background-repeat: no-repeat;
              background-position: right center;
              background-size: 10% 98%;

	        }
          main {


                }
          aside {
	            float: left;
    	        padding-left: 2em;
        	    padding-right: 2em;
            	padding-bottom: 2em;
            	width: 175px;
          	}

	    	#logoff {
				position: absolute;
				right: 10px;
			}

			button {
  				display: inline-block;
	  			font-size: 16px;
	  			cursor: pointer;
	  			text-align: center;
	  			text-decoration: none;
	  			outline: none;
	  			background-color: black;
	  			color: #fff;
	  			border: none;
	  			border-radius: 10px;
	  			box-shadow: 0 5px #999;
	  			margin-left: 1em;
	    		margin-right: 1em;
			}

			button:hover {background-color: #3e8e41}

			button:active {
	  			background-color: #3e8e41;
	  			box-shadow: 0 5px #666;
	  			transform: translateY(4px);
	  		}

		    a:link {
		      	color: blue;
	 	   		text-decoration: none;
	 	   		font-size: 16px;
			}

			a:visited {
				color: blue;
	    		text-decoration: none;
	    		font-size: 16px;
			}

			a:hover {
				color: blue;
			}

			#activityList {
	            text-align: center;
	            padding: 1em;
	            overflow: hidden;
	            background-color: #f0f0f5;
	            box-shadow: 0px 1px 50px #5E5E5E;
	            height: 80vh;
	        }

	        input {
	        	margin-left: 1em;
	        }
	    </style>
    </head>
    <body>
	  	<header>
      <main>
          <br>
          <div>
            <input type="text" name ="search" id="search" class = "search">
            <button id="searchbutton">Search</button>
            <button id="logoff"><a href = "/logoff">Logoff</a></button>
          </div>
      	</header>
      	<br>
      	<br>
      	<br>
	  	<aside id = "follows">
            <h3>{{username}} Follows</h3>
        	<table class = "following_tweets" id = "following_tweets">
        	<tr><td><b>Following</b></td></tr>
        	{% for f in follows %}
        	<tr>
        	<td><a href="/userActivity?UserName='{{f}}'">{{f}}
        	</a></td></tr>
        	{% endfor %}
      		</table>
        </aside>
        <section id = "activityList">
      		<h2>{{username}} Activities</h2>
      		<table class = "tweets" id = "tweets">
      		<tr><td><b>Tweet</b></td>
      		<td><b>Author</b></td>
      		<td><b>Post Date</b></td>
      		</tr>
      		{% for t in tweets %}
      		<tr>
      		<td>{{t.tweet}}</td>
      		<td>{{t.createdByName}}</td>
      		<td>{{t.createTimestamp}}</td>
      		</tr>
      		{% endfor %}
      		</table>
      	</section>
      	<script type="text/javascript">

      	var button = document.getElementById('searchbutton');
    	button.onclick = function () {
			var link = document.getElementById("search").value;
			window.location = "/userActivity?UserName=%27"+link+"%27";}


    		</script>
    </body>
   </html>
