    <script>
 	  	var tweet_button = document.getElementById('tweet');
 		tweet_button.onclick = function () {
 			var xhr = new XMLHttpRequest();
     		xhr.open('POST', '/submitTweet');
     		xhr.setRequestHeader('Content-Type', 'application/json');
     		xhr.onload = function() {
         		if (xhr.status === 200) {
             		console.log(xhr.responseText);
         		} else if (xhr.status !== 200) {
             		alert('Request failed.  Returned status of ' + xhr.status);
         		}
     		};
     		var tweet = {tweet: document.getElementById("tweetTextArea").value};
     	
     		xhr.send(JSON.stringify(tweet));
 	    };
   </script> 
   
   <script>
   		var tableClick = document.getElementById('popular_tweeters');

    	tableClick.addEventListener('click', function(evt) {
    		if (evt.target.tagName === 'BUTTON') {
    			var tweeter = evt.target.getAttribute('tweeter');

 				var xhr = new XMLHttpRequest();
     			xhr.open('POST', '/submitFollow');
     			xhr.setRequestHeader('Content-Type', 'application/json');
     			xhr.onload = function() {
         			if (xhr.status === 200) {
             			console.log(xhr.responseText);
         			} else if (xhr.status !== 200) {
             			alert('Request failed.  Returned status of ' + xhr.status);
         			}
     			};
     			var tweet = {follows: tweeter};
     	
     			xhr.send(JSON.stringify(tweet));
    		}
    	});
   		
   </script>
